<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Opinion matters!"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>
    <RadioGroup
        android:id="@+id/rateRadioGroup"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:padding="25dp"
        app:layout_constraintTop_toBottomOf="@+id/rateTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RadioButton
            android:id="@+id/RadioButtonR1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excellent"/>

        <RadioButton
            android:id="@+id/RadioButtonR2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Great"/>

        <RadioButton
            android:id="@+id/RadioButtonR3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good"/>

        <RadioButton
            android:id="@+id/RadioButtonR4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neutral"/>

        <RadioButton
            android:id="@+id/RadioButtonR5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bad"/>
    </RadioGroup>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintTop_toBottomOf="@+id/rateRadioGroup"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@+id/rateRadioGroup"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>